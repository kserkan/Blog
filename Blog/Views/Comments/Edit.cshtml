@model Blog.Entity.Comment

@{
    ViewData["Title"] = "Yorum Düzenle";
}

<h2 class="mb-4">Yorum Düzenle</h2>

<div class="card w-75">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="CommentId" />

            <div class="mb-3">
                <label class="form-label">Yorum Yapılan Yazı</label>
                <p><strong>@Model.Post?.Title</strong></p>
            </div>

            <div class="mb-3">
                <label asp-for="Text" class="form-label">Yorum</label>
                <textarea asp-for="Text" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="/profile/@Model.User?.UserName" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
