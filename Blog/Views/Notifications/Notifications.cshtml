@model List<Blog.Entity.Notification>
@{
    ViewData["Title"] = "Bildirimlerim";
}

<h2 class="mb-4">Bildirimlerim</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">Hiç bildiriminiz yok.</div>
}
else
{
    <ul class="list-group">
        @foreach (var notif in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start @(notif.IsRead ? "" : "bg-light fw-bold")">
                <span>@Html.Raw(notif.Message)</span>
                <small class="text-muted">@notif.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
            </li>
        }
    </ul>
}
