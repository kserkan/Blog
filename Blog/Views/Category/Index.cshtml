@model IEnumerable<Blog.Entity.Blog.Entity.Category>

<h2>Kategoriler</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Yeni Kategori</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Url</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Url</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
